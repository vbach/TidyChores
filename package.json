{
  "name": "capstone-project-vbach",
  "version": "1.0.0",
  "engines": {
    "node": "12.13.0"
  },
  "scripts": {
    "reactjs": "cd reactjs && npm start",
    "api": "cd api; nodemon server.js",
    "server": "npm start --prefix api",
    "dev": "concurrently --raw \"npm run api\" \"npm run reactjs\"",
    "start": "node api/app/index.js",
    "install-reactjs": "cd reactjs; npm install",
    "install-api": "cd api; npm install",
    "build-reactjs": "cd reactjs; npm run build",
    "build-api": "cd api; npm run db-update",
    "heroku-postbuild": "concurrently \"npm:install-*\"; concurrently \"npm:build-*\"; "
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "concurrently": "^4.1.2"
  }
}
